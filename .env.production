# Production Environment Configuration
# Wekeza Bank Risk Management System

# Environment
ENVIRONMENT=production

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=risk_management
DB_USER=risk_user
DB_PASSWORD=risk_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# API Configuration for Integrated Services
BALLERINE_API_URL=http://ballerine-backend:3000/api/v1
BALLERINE_API_KEY=your-ballerine-api-key-here
CISO_API_URL=http://ciso-assistant:8000/api
CISO_API_TOKEN=your-ciso-api-token-here
TAZAMA_API_URL=http://tazama-processor:4000/api
TAZAMA_API_KEY=your-tazama-api-key-here

# Risk Thresholds
HIGH_RISK_THRESHOLD=0.8
MEDIUM_RISK_THRESHOLD=0.5
AMOUNT_THRESHOLD_HIGH=10000000
AMOUNT_THRESHOLD_MEDIUM=1000000

# Monitoring Settings
POLLING_INTERVAL_SECONDS=30
BATCH_SIZE=100

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
BCRYPT_SALT=10
SESSION_SECRET=your-session-secret-change-this-in-production
DJANGO_SECRET_KEY=your-django-secret-key-change-this-in-production

# External Service URLs (for browser access)
BALLERINE_FRONTEND_URL=http://localhost:5173
CISO_ASSISTANT_URL=http://localhost:8443
TAZAMA_DASHBOARD_URL=http://localhost:4000
RISK_DASHBOARD_URL=http://localhost:8501

# Logging
LOG_LEVEL=info

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3